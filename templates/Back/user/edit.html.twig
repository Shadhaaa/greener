		<tr>
			<td>{{ form_label(form.nom, "Nom") }}</td>
			<td>{{ form_widget(form.nom) }}</td>
			<td>{{ form_errors(form.nom) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.prenom, "Prénom") }}</td>
			<td>{{ form_widget(form.prenom) }}</td>
			<td>{{ form_errors(form.prenom) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.pdp, "Photo de profil") }}</td>
			<td>{{ form_widget(form.pdp) }}</td>
			<td>{{ form_errors(form.pdp) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.num, "Numéro") }}</td>
			<td>{{ form_widget(form.num) }}</td>
			<td>{{ form_errors(form.num) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.mail, "Email") }}</td>
			<td>{{ form_widget(form.mail) }}</td>
			<td>{{ form_errors(form.mail) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.mdp1, "Mot de passe") }}</td>
			<td>{{ form_widget(form.mdp1) }}</td>
			<td>{{ form_errors(form.mdp1) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.role, "Rôle") }}</td>
			<td>{{ form_widget(form.role) }}</td>
			<td>{{ form_errors(form.role) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.adresse, "Adresse") }}</td>
			<td>{{ form_widget(form.adresse) }}</td>
			<td>{{ form_errors(form.adresse) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.genre, "Genre") }}</td>
			<td>{{ form_widget(form.genre) }}</td>
			<td>{{ form_errors(form.genre) }}</td>
		</tr>
		<tr>
			<button type="submit" class="btn">Save</button>

		</tr>
