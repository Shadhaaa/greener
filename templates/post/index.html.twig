{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}





    <h1 style="text-align: center; color: #555;">Posts</h1>

    

    <div style="margin: 20px;">
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr>
                {#<th style="background-color: #f2f2f2; font-weight: bold; padding: 12px; border-bottom: 1px solid #ddd; color: #333;">Entreprise</th>#}
                    <th style="background-color: #f2f2f2; font-weight: bold; padding: 12px; border-bottom: 1px solid #ddd; color: #333;">Titre</th>
                    <th style="background-color: #f2f2f2; font-weight: bold; padding: 12px; border-bottom: 1px solid #ddd; color: #333;">Type de contenu</th>
                    <th style="background-color: #f2f2f2; font-weight: bold; padding: 12px; border-bottom: 1px solid #ddd; color: #333;">Contenu</th>
                    <th style="background-color: #f2f2f2; font-weight: bold; padding: 12px; border-bottom: 1px solid #ddd; color: #333;">Date</th>
                    <th style="background-color: #f2f2f2; font-weight: bold; padding: 12px; border-bottom: 1px solid #ddd; color: #333;">Image</th>
                    <th style="background-color: #f2f2f2; font-weight: bold; padding: 12px; border-bottom: 1px solid #ddd; color: #333;">Actions</th>
                    <th style="background-color: #f2f2f2; font-weight: bold; padding: 12px; border-bottom: 1px solid #ddd; color: #333;">commenter</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>                
                        {#<td style="padding: 12px; border-bottom: 1px solid #ddd;">{{ post.idEntreprise }}</td>#}
                        <td style="padding: 12px; border-bottom: 1px solid #ddd;">{{ post.titre }}</td>
                        <td style="padding: 12px; border-bottom: 1px solid #ddd;">{{ post.typedecontenu }}</td>
                        <td style="padding: 12px; border-bottom: 1px solid #ddd;">{{ post.contenu }}</td>
                        <td style="padding: 12px; border-bottom: 1px solid #ddd;">{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
                        <td style="padding: 12px; border-bottom: 1px solid #ddd;">{{ post.image }}</td>
                        <td style="padding: 12px; border-bottom: 1px solid #ddd;">
                            <a href="{{ path('app_post_show', {'idPost': post.idPost}) }}" style="display: inline-block; padding: 8px 16px; border: none; border-radius: 4px; transition: all 0.3s ease; text-decoration: none; color: #fff; background-color: #3498db; margin-right: 5px;">Show</a>
                            <a href="{{ path('app_post_edit', {'idPost': post.idPost}) }}" style="display: inline-block; padding: 8px 16px; border: none; border-radius: 4px; transition: all 0.3s ease; text-decoration: none; color: #fff; background-color: #27ae60;">Edit</a>
                            
                        </td>
                        <td style="padding: 12px; border-bottom: 1px solid #ddd;">
                            <a href="{{ path('app_commentaires_new', {'idPost': post.idPost}) }}" style="display: inline-block; padding: 8px 16px; border: none; border-radius: 4px; transition: all 0.3s ease; text-decoration: none; color: #fff; background-color: #27ae60;" >Commenter</a>
                        </td>
                    </tr>
                        
                {% else %}
                    <tr>
                        <td colspan="6" style="padding: 12px;">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_post_new') }}" style="display: inline-block; margin-top: 20px; text-decoration: none; background-color: #e74c3c; color: #fff; padding: 12px 24px; border-radius: 5px; transition: all 0.3s ease;">Create new</a>
    
    

    

{% endblock %}
