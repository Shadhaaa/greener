{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPost</th>
                <th>IdEntreprise</th>
                <th>Titre</th>
                <th>Typedecontenu</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.idPost }}</td>
                <td>{{ post.idEntreprise }}</td>
                <td>{{ post.titre }}</td>
                <td>{{ post.typedecontenu }}</td>
                <td>{{ post.contenu }}</td>
                <td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
                <td>{{ post.image }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'idPost': post.idPost}) }}">show</a>
                    <a href="{{ path('app_post_edit', {'idPost': post.idPost}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}">Create new</a>
{% endblock %}
